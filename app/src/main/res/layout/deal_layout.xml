<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginRight="@dimen/app_margin"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="140dp"
    android:layout_height="100dp"
    android:id="@+id/img_deal"
    android:layout_marginRight="@dimen/app_margin"
    android:src="@drawable/fui_ic_check_circle_black_128dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txt_title"
    android:textSize="@dimen/text_title_size"
    android:text="LAS VEGAS"
        android:layout_marginLeft="@dimen/app_margin"
    android:layout_marginTop="@dimen/app_margin"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toRightOf="@id/img_deal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_deal_description"
        android:textSize="@dimen/text_size"
        android:layout_marginLeft="@dimen/app_margin"
        android:text="las vegas holliday"
        android:layout_marginTop="@dimen/app_margin"
        app:layout_constraintTop_toBottomOf="@id/txt_title"
        app:layout_constraintLeft_toRightOf="@id/img_deal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_deal_price"
        android:textSize="@dimen/text_size"
        android:text="150000"
        android:layout_marginRight="@dimen/app_margin"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/txt_deal_description"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>